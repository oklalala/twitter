<%= simple_form_for(@user) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :user, label: "Tweeet about it", input_html: {class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweeet..." %>

  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>